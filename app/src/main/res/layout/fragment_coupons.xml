<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eltendawy.city.Fragments.Coupons_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.TabLayout
        android:id="@+id/coupons_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/tab_background"
        android:fillViewport="false"
        android:fitsSystemWindows="true"
        android:overScrollMode="ifContentScrolls"
        android:pointerIcon="arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/tab_active"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/tab_active">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/coupons_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/view_pager_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coupons_tab"/>
</android.support.constraint.ConstraintLayout>
